{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": 2015,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["off", "tab"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-console": "off",
		"no-unused-vars": "off",
		"no-undef": "off",
		"no-useless-escape": "off",
		"prettier/prettier": [
			"error",
			{
				"printWidth": 100,
				"singleQuote": true
			}
		]
	},
	"plugins": ["prettier"]
}
